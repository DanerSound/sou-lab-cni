---
- name: Install Apache and create a file
  hosts: all
  remote_user: andrecristhian
  become: true
  vars:
    ansible_ssh_pass: vagrant

  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes

    - name: Install Apache
      apt:
        name: apache2
        state: present

    - name: Ensure Apache service is running and enabled
      service:
        name: apache2
        state: started
        enabled: yes

    - name: Create a file
      copy:
        dest: /var/www/html/example.txt
        content: |
          This is an example file.
        mode: "0644"
        owner: www-data
        group: www-data



